@model IEnumerable<Models.Order>

@{
    ViewData["Title"] = "ListOfOrders";
    Layout = "_AdminLayout";
}
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]


<h1>ListOfOrders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.booksList)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Line3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiftWrap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shipped)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.booksList)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Line3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiftWrap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shipped)
            </td>
            <td>
                    <a asp-action="OrderDetails" asp-route-OrderID="@item.OrderID" class="btn btn-primary">Details</a> |
                    <a asp-controller="Admin" asp-action="DeleteOrder" asp-route-OrderID="@item.OrderID" class="btn btn-primary">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
