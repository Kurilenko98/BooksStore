@model IEnumerable<BooksStore.Models.Book>

@{
    ViewData["Title"] = "OrderDetails";
    Layout = "_AdminLayout";
}

<div class="text-center">
    <h1 class="display-4">OrderDetails</h1>
    <table class="table table-bordered table-striped" style="width=100%">
        <thead>
            <tr>
                <th>
                    Book Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width=50%>
                        @Html.ActionLink(item.Name, "Edit", new { item.Id })
                    </td>
                    <td width=30%>
                        @item.Category
                    </td>
                    <td width=20%>
                        @item.Price
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
