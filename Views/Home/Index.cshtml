@model IEnumerable<Book>
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">Welcome to BooksStore</h1>
    <table class="table table-bordered table-striped" style="width=100%">
        <thead>
            <tr>
                <th>
                    Book Name
                </th>
                <th>
                    Category
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width=50%>
                            @item.Name
                    </td>
                    <td width=30%>
                            @item.Category
                    </td>
                    <td width=20%>
                            @item.Price
                    </td>
                    <td width=30%>
                        <a asp-controller="Cart" asp-action="AddToCart" asp-route-Id="@item.Id" class="btn btn-primary">
                            Add To cart
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
